<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleSelection"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:text="Select your\nVehicle"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/box"
        android:paddingLeft="40dp"
        android:paddingTop="80dp"
        android:textColor="@color/white"
        android:backgroundTint="#1D9CE3"
        android:paddingRight="40dp"
        android:paddingBottom="80dp"
        android:text="Cycle"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:backgroundTint="#EC3DEF"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="40dp"
        android:layout_toEndOf="@+id/textView5"
        android:background="@drawable/box"
        android:paddingLeft="40dp"
        android:paddingTop="50dp"
        android:paddingRight="40dp"
        android:paddingBottom="50dp"
        android:text="Car"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:backgroundTint="#11E633"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/box"
        android:paddingLeft="30dp"
        android:paddingTop="90dp"
        android:paddingRight="30dp"
        android:paddingBottom="80dp"
        android:text="Bike"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true"
        android:backgroundTint="#F6C73B"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/textView7"
        android:background="@drawable/box"
        android:paddingLeft="30dp"
        android:paddingTop="60dp"
        android:paddingRight="30dp"
        android:textColor="@color/white"
        android:paddingBottom="50dp"
        android:text="Truck"
        android:textAlignment="center"
        android:textSize="24sp" />


</RelativeLayout>